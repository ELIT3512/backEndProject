	<h1>Edit Avatar</h1>
<div class="form">
  <form action='/editAvatar/{{aAvatar._id}}' method="POST">
    <label for="name">Name</label>
                <input type="text" id="name" name="name">
                <label for="Powertype">Power type</label>
                <select id="powerType" name="powerType">
                    <option value="Fire">Fire</option>
                    <option value="Water">Water</option>
                    <option value="Earth">Earth</option>
                    <option value="Air">Air</option>
                </select>
                <label for="PowerLevel">Power Level</label>
                <button type="submit" name="powerLevel" id="powerBtn" value="Roll">Roll</button>
                <Footer>Power: xRandom Power #x</Footer>
    
    
  </form>
</div>